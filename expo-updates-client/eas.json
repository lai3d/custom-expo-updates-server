{
    "cli": {
      "version": ">= 3.1.1"
    },
    "build": {
      "development": {
        "distribution": "internal",
        "developmentClient": true,
        "env": {
          "APP_ENV": "development"
        }
      },
      "staging": {
        "distribution": "internal",
        "android": {
          "buildType": "apk"
        },
        "ios": {
          "simulator": true
        },
        "env": {
          "APP_ENV": "staging"
        }
      },
      "production": {
        "distribution": "internal",
        "android": {
          "buildType": "apk",
          "credentialsSource": "local"
        },
        "env": {
          "APP_ENV": "production"
        }
      }
    },
    "submit": {
      "production": {}
    }
  }
  